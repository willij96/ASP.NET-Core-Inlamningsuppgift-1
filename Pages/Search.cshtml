@page "{q?}"
@model FreakyFashion1.SearchModel
@{
	ViewData["Title"] = "Search";
}

<h1>Search</h1>

<div class="">
	@foreach (var product in Model.Product)
	{

	<div style="border:1px solid black; margin:10px;">

		<ul class="list-unstyled">
			<li class="media">
				<a asp-page="/Product" asp-route-name="@product.Name" asp-route-urlSlug="@product.UrlSlug">
					<img class="mr-3" src="@product.ImageUrl" alt="image" style="height:100px; margin:10px; margin-bottom:0px;">
				</a>
				<div class="media-body">
					<h5 class="mt-0 mb-1">@product.Name</h5>
					@product.Price
				</div>
			</li>
		</ul>
	</div>
		
	}
</div>
